<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="stock"
            type="com.f11labz.yahooapi.data.domain.AppStock"/>
        <variable
            name="percentage"
            type="Boolean" />
    </data>

    <LinearLayout
        android:id="@+id/list_item_quote_row"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/symbol"
                style="@style/StockSymbolTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|left|center_vertical"
                android:text="@{stock.symbol}"
                tools:text="GOOG" />

            <TextView
                android:id="@+id/company_name"
                style="@style/CompanyNameTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/symbol"
                android:text="@{stock.stockname}"
                tools:text="Google" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right|end"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/price"
                style="@style/BidPriceTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                app:priceFormatted="@{stock}"
                tools:text="1000.00" />

            <TextView
                android:id="@+id/change"
                style="@style/PercentChangeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                app:percentageFormatted="@{stock}"
                app:showPercentage="@{percentage}"
                app:setPill="@{stock}"
                tools:text="100%" />
        </LinearLayout>
    </LinearLayout>
</layout>
